<% if @communication.newsletter? -%>
<%= textify(@communication.full_title, :mode => :h1) -%>

<%= textify(@communication.introduction) %>
<% for article in @communication.articles %>

<%= textify(article.title, :mode => :h2) %>
<%= textify(article.content) %>
<% end %>

<%= textify(@communication.conclusion) %>
<%= textify(@communication.footer) -%>
<% else -%>
<%=textify(@communication.message)-%>

<% unless @communication.message_label.blank? %>
<%=@communication.message_label %> : <%= @message_url %>
<% end %>
<% unless @communication.unsubscribe_label.blank? %>
<%=@communication.unsubscribe_label %> : <%=@unsubscribe_url %>
<% end -%>
<% end -%>
